{
  "compilerOptions": {
    /* Project setup */
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* Node environment */
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Type checking */
    "strict": true,

    /* Module behavior */
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,

    /* Quality of life */
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
