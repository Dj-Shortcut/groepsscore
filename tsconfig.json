{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],
    "resolveJsonModule": true,

    "sourceMap": true,
    "strict": true,

    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "include": ["src"]
}
